extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 Full Stack Javascript Portfolio

      p.lead.text-light
        | This portfolio contains several projects from the Team Treehouse Techdegree program, that showcase various aspects of full stack javascript development.
  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project, index in projects
        .cell
          a(href=`/projects/project_${index}`)
            img.thumbnail(src=`/static/${project.image_urls[0]}`)
            h5 #{project.project_name}
